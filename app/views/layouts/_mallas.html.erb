<% tipos_materia= ['electiva', 'optativa', 'disciplinar', 'fundamentacion', 'nivelacion'] %>
<% @user = current_user %>
<% @malla = malla %>
<div class="row">
        <div class="col-md-12" class="back">
        <table id="tableSemesters" class="table table-bordered .table-responsive ">
          <thead class="thead"> 
            <tr>
              <% @malla.semesters.each do |sem| %>
                <th >
                  <p class="semestre" style="font-size: 50%">Semestre <br> <%= sem.number %></p>
                </th>
              <% end %>
              <% if add_subjects_enabled %>
                 <th >
                  <p class="semestre" style="font-size: 50%"> ¡Añadir Semestre!</p>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr id="mytr">
              <% current_semester = 1 %>
              <% @malla.semesters.each do |sem| %>
              <% empty_semester = true %>
                <td align="center">
                  <% sem.career_has_subjects.each do |chs| %>
                  <% empty_semester = false %>
                    <% if vista=="admin_malla" %> 
                    <%= render partial: "layouts/subject", locals: {estadisticas: false, vista: "admin_malla", subj: Subject.find(chs.subject_id), typ: chs.typology, sem: sem, code_career: Career.find_carrer_code_by_malla(@malla) } %>
                    <% elsif vista == "malla_avance" %>
                      <% if SemesterHasSubject.exists?(student_id: @user.id, career_has_subject_id: chs.id) %>
                        <% @aprobada=true %>
                      <% else %>
                        <% @aprobada=false %>
                      <% end %>
                    <%= render partial: "layouts/subject.html.erb", locals: {aprobada: @aprobada,estadisticas: false, vista: "malla_avance", subj: Subject.find(chs.subject_id), typ: chs.typology, sem: sem, code_career: Career.find_carrer_code_by_malla(@malla) } %>
                    <% elsif estadisticas %>
                    <%= render partial: "layouts/subject.html.erb", locals: {estadisticas: true, vista: "student_malla", subj: Subject.find(chs.subject_id), typ: chs.typology, sem: sem, code_career: Career.find_carrer_code_by_malla(@malla)} %>
                    <% else %>
                    <%= render partial: "layouts/subject.html.erb", locals: {estadisticas: false, vista: "student_malla", subj: Subject.find(chs.subject_id), typ: chs.typology, sem: sem, code_career: Career.find_carrer_code_by_malla(@malla)} %>
                    <% end %>
                  <% end %>
                  
                  <% sem.subjects.each do |student_subj| %>
                    <% if vista=="admin_malla" %> 
                    <%= render partial: "layouts/subject", locals: {estadisticas: false, subj: student_subj, typ: sem.semester_has_student_subjects.find_by(subject_id: student_subj.id).typology, sem: sem, code_career: Career.find_carrer_code_by_malla(@malla), vista: vista} %>
                    
                    <% else %>
                    <%= render partial: "layouts/subject.html.erb", locals: {estadisticas: false, subj: student_subj, typ: sem.semester_has_student_subjects.find_by(subject_id: student_subj.id).typology, sem: sem, code_career: Career.find_carrer_code_by_malla(@malla), vista: vista } %>
                    <% end %>
                  <% end %>
                  <br>  
                  
                  
                   <% if empty_semester && current_semester == @malla.semesters.length  %>
                      <%= link_to "<p class='glyphicon glyphicon-remove'></p>".html_safe, '#', "data-target" => "#removeSemester", "data-toggle"=>"modal", :class => "MainNavText", :onclick => "reset_and_assign('#{current_semester.to_s}')" %>
                     <br>
                    <% end %>
                  <% if vista=="admin_malla" %>
                      <%= link_to "<p class='glyphicon glyphicon-plus'></p>".html_safe, '#', "data-target" => "#addSubjectFromAdmin", "data-toggle"=>"modal", :class => "MainNavText", :onclick => "reset_and_assign('#{current_semester.to_s}')" %>
                  <% else if vista == "student_malla" && pdf == false && current_semester >= user.current_semester%>
                  
                  
                      <%= link_to "<p class='glyphicon glyphicon-plus'></p>".html_safe, '#', "data-target" => "#addSubjectFromStudent", "data-toggle"=>"modal", :class => "MainNavText", :onclick => "reset_AM('#{current_semester.to_s}')" %>
                   
                  <% end %>
                     
                  <%end%>
                  <% current_semester += 1%>
                </td>
                 
              <% end %>
              
              <% current_semester -= 1%>
              <% if add_subjects_enabled %>
                <td align="center">
                      <%= link_to "<p class='glyphicon glyphicon-plus'></p>".html_safe, '#', "data-target" => "#addNewSemester", "data-toggle"=>"modal", :class => "MainNavText", :onclick => "reset_and_assign('#{current_semester.to_s}')" %>
                </td>
                 <% end %>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
  
