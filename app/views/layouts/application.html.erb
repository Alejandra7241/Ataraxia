<!DOCTYPE html>
<html lang="en">
<head>
  <title>Ataraxia</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <%= link_to root_path do %>
        <%= image_tag 'logo_final.png', height: 40, :style => "margin-top: 5px" %>
        <% end %>
      <%= link_to 'Ataraxia', root_path, {:style=>'font-family: "Trebuchet MS", Helvetica, sans-serif; font-size: 250%', :class => "navbar-brand"} %>
    </div>
    
    <div class="collapse navbar-collapse" id="myNavbar">
    <% if user_signed_in? %>
    
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= image_tag current_user.avatar.url(:medium), height: 30%><%= current_user.name %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% if current_user.admin? %>
            <li><%= link_to "Menu principal", admin_index_path %></li>
            <% else %>
            <li><%= link_to "Menu principal", student_index_path %></li>
            <% end %>
            <li><%= link_to "Ver perfil", current_user %></li>
            <li><%= link_to "Editar perfil #{current_user.email}", edit_user_registration_path %></li>
            <li><%= link_to 'Cerrar sesión', destroy_user_session_path,   method: :delete %></li>
          </ul>
        </li>
      </ul>

    <% else %>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "<p class='glyphicon glyphicon-user'></p>&nbsp;Registrarse".html_safe, new_user_registration_path, :class => "navbar-brand" %></li>
        <li><%= link_to "<p class='glyphicon glyphicon-log-in'></p>&nbsp;Entrar".html_safe, new_user_session_path, :class => "navbar-brand" %></li>
      </ul>
    <% end %>
    </div>
  </div>
</nav>

<%= render 'layouts/messages' %>
<%= yield %>

<footer>
  <nav class="navbar navbar-inverse navbar-fixed-bottom" style="margin: 0px 0px 0px 0px;">
    <div class="container-fluid">
      <div class="navbar-footer">
        <%= link_to 'Contáctenos', contact_direct_path, :class => "navbar-brand" %>
        <%= link_to 'GitHub', 'https://github.com/sedUNdnes', :class => "navbar-brand", :target => "_blank"%>
        <%= link_to 'Facebook', 'https://www.facebook.com/Sedundnes-Ataraxia-511855252496936/', :class => "navbar-brand", :target => "_blank" %>
      </div>
        
      <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "<p class='glyphicon glyphicon-question-sign'></p>".html_safe,'#', "data-target" => "#myModal3", "data-toggle"=>"modal", :class => "MainNavText navbar-brand" %></li>
        </ul>
      </div>
      <% end %>
    </div>
  </nav>
</footer>



</body>
</html>
