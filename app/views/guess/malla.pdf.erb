<!DOCTYPE html>
<html>
    <head>
      
        <title>Malla</title>
        <meta charset="UTF-8">
        <%= wicked_pdf_stylesheet_link_tag 'application' %>

    </head>
    <% career = Career.find_by id: 1
        malla = career.mallas.find_by nombre: 'Ingeniería de Sistemas y Computación'
    %>
    <body>
        <table id="tableSemesters" class="table table-bordered .table-responsive ">
          <thead class="thead"> 
            <tr>
              <% malla.semesters.each do |sem| %>
                <th>
                  <p class="semestre" style="font-size: 50%">Semestre <br> <%= sem.number %></p>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr id="mytr">
              <% current_semester = 1 %>
              <% malla.semesters.each do |sem| %>
                <td align="center">
                  <% sem.subjects.each do |subj| %>
                    <%= render partial: "admin/subject.html.erb", locals: {vista2: "", subj: subj, typ: subj.career_has_subjects.find_by(career_id: career.id).typology } %>
                  <% end %>
                  <br>
                  <% current_semester += 1%>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </body>
</html>