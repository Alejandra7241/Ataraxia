<img src="/universidad3.jpg" class="bottomImage">
<div class="row">
  <div class = "col-sm-4"></div>
		<div class = "col-sm-4 well">
      <div  align="center" style="position: relative" > <img src="/logo_final.png" class="imageWell"> 
          <h2 >¿Olvidaste tu contraseña?</h2> 
      </div>
      <br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Ingrese su correo', class: 'form-control'%>
        <br />
      </div>
      <br>  
      <div class="actions">
        <%= f.submit "Recuperar mi contraseña", class: 'btn btn-success myButton' %>
      </div>
      <br>
      <% end %>
        
      <%= render "devise/shared/links" %>
  </div>
</div>