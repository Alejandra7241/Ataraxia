<%= devise_error_messages! %>
<img src="/universidad3.jpg" class="bottomImage">
<div class="row">
		<div class = "col-sm-4"></div>
		<div class = "col-sm-4 well">
            <!--<div align="center"><img src="/logo_final.png" class="imageWell">-->
            <div align="center"><%= image_tag current_user.avatar.url(:small) %>
              <h1>Editar Cuenta</h1>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <br>
              <form>
                  <% unless current_user.admin? %>
                  <div class="form-group" align="center" >
                    <%= link_to 'Actualizar historia academica', actualizar_historia_academica_path, :class => "btn btn-info", :onclick => 'recharge2()' %>
                    <%= link_to 'Actualizar mis cursos', actualizar_mis_cursos_path, :class => "btn btn-warning", :onclick => 'recharge2()' %>
                  </div>
                <% end %>
              
                <!--<div class="field">
                  <%= f.label :avatar %><br />
                  <%= f.file_field :avatar %>
                </div>--> 
                <br>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
                  
                  <div class="form-group">
                      <label class="control-label" for="Mensaje">Contraseña actual</label>
                      <%= f.password_field :current_password, autocomplete: "off", type: "password", class: "form-control", placeholder: "Introduzca la contraseña actual"  %>
                  </div>
                  
                  <div class="form-group">
                      <label class="control-label" for="Correo">Nueva contraseña</label>
                     <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", placeholder: "Dejar en blanco si no quiere cambiarla" %>
                     <% if @minimum_password_length %>
                        <em>Mínimo <%= @minimum_password_length %> caracteres</em>
                      <% end %>
                  </div>
                  <div class="form-group">
                      <label class="control-label" for="Nombre">Confirmar nueva contraseña</label>
                      <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: "form-control", placeholder: "Confirme la nueva contraseña" %>
                  </div>
                  
                  
                  <div class="form-group pull-right" >
                    <input type="reset" class="btn btn-default" value="Limpiar"> 
                    <%= f.submit "Actualizar datos", class: "btn btn-primary" %>
                  </div>
                  <div id="respuesta" style="display: none;"></div>
              </form>
            <% end %>
            <br><br>
            <h3>Cancelar mi cuenta</h3>
            <p>¿Desea eliminar su cuenta de Ataraxia permanentemente?</p> 
            <p><%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro que desea eliminar su cuenta?" }, method: :delete, class: "btn btn-danger" %></p>
        </div>
        <div class = "col-sm-4"></div>
</div>

<%= render 'layouts/footer', :vista=> "normal"%>
