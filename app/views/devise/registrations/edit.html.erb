                  </div>
                  <br>
                  <div class="form-group pull-right" >
                    <input type="reset" class="btn btn-default" value="Limpiar"> 
                    <%= f.submit "Actualizar datos", class: "btn btn-primary" %>        
                  </div>
                  <div id="respuesta" style="display: none;"></div>
              </form>
            <% end %>
