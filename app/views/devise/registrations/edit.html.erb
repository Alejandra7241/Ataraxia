            <h1>Editar <%= resource_name.to_s.humanize %></h1></div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %> <%-# Los errores se muestran en inglés -%>
              <br>
              <form>
                  <div class="form-group">
                      <label class="control-label" for="Nombre">Correo electrónico</label>
                      <%= f.email_field :email, autofocus: true, class: "form-control", id: "Nombre" %>
                  </div>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
                  
                  <div class="form-group">
                      <label class="control-label" for="Correo">Nueva contraseña</label>
                      <i>(dejar en blanco si no quiere cambiarla)</i>
                      <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", placeholder: "Introduzca la nueva contraseña" %>
                      <% if @minimum_password_length %>
                        <em>Mínimo <%= @minimum_password_length %> caracteres</em>
                      <% end %>
                  </div>
                  <div class="form-group">
                      <label class="control-label" for="Nombre">Confirmar nueva contraseña</label>
                      <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: "form-control", placeholder: "Confirme la nueva contraseña" %>
                      
                  </div>
                  <div class="form-group">
                      <label class="control-label" for="Mensaje">Contraseña actual</label>
