<%= devise_error_messages! %>
<img src="/universidad3.jpg" class="bottomImage">
<div class="row">
		<div class = "col-sm-4"></div>
		<div class = "col-sm-4 well">
      <h1 align="center">¡Iniciar Sesión con Ataraxia!</h1>
      <div align="center"><img src="/logo_final.png" class="imageWell"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <br>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, placeholder: 'Ingrese su correo', class: 'form-control' %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, placeholder: 'Ingrese su contraseña', class: 'form-control', autocomplete: "off" %>
        </div>
        <br>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      
        <div class="field" style="text-align:center">
          <%= f.submit "Acceder", class: 'btn btn-success myButton' %>
        </div>
      <% end %>
      
    <div style="text-align:center"><%= render "devise/shared/links" %></div>
    <br>
    </div>

    <div class = "col-sm-4"></div>

</div>

      
