<img src="/universidad3.jpg" class="bottomImage">
<div class="row">
		<div class = "col-sm-4"></div>
		<div class = "col-sm-4 well">
            <div align="center"><img src="/logo_final.png" class="imageWell">
            <h1>¡Danos tu opinion!</h1></div>
                        <br>
                        <form>
                            <%= form_for :post, :url => submit_opinion_path do |f|  %>
                            <div class="form-group">
                                <%= f.label :nombre, 'Nombres' %><br>
                                <%= f.text_field :nombre, placeholder: "Introduzca su nombre", autofocus: true, :class => 'form-control' %>
                            </div>
                            
                            
                            <div class="form-group">
                                <%= f.label :correo, 'Dirección de correo electrónico' %><br>
                                <%= f.text_field :correo, placeholder: "Introduzca su correo electrónico", required: true, :class => 'form-control' %>
                            </div>
                            <div class="form-group">
                                <%= f.label :asunto, 'Asunto' %><br>
                                <%= f.text_field :asunto, placeholder: "Introduzca el asunto", autofocus: true,  :class => 'form-control' %>
                            </div>
                            <div class="form-group">

                                <%= f.label :mensaje, 'Mensaje' %><br>
                                <%= f.text_area :mensaje, placeholder: "Introduzca su mensaje", required: true,  :class => 'form-control', rows: 5, cols: 30 %>
                            </div>
                            <div class="form-group" >     
                                <%= f.submit 'Enviar opinión', :class => 'btn btn-primary' %>
                                
                                <%= button_tag "Limpiar", type: :reset, :class => 'btn btn-default' %>
                            </div>
                            <div id="respuesta" style="display: none;"></div>
                            <% end %>
                        </form>
                         
        </div>
        <div class = "col-sm-4"></div>
</div>


